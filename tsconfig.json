{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["utils/*"],
      "@translations/*": ["translations/*"],
      "@packages/*": ["packages/*"]
    }
  },
  "lib": ["DOM", "DOM.Iterable", "ESNext"],
  "include": ["packages/**/*", "*.ts", "*.tsx"],
  "exclude": [
    "node_modules/**",
    "packages/vue-mini-apps/**/*",
    "packages/react-mini-apps/node_modules/**",
    "packages/react-mini-apps/src/bugg-react-apps.ts",
    "packages/portfolio-main/node_modules/**",
    "packages/portfolio-main/src/bugg-main-app.ts",
    "packages/portfolio-container/node_modules/**"
  ]
}
